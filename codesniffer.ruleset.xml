<?xml version="1.0"?>
<ruleset name="FitWP Theme Coding Standards">
	<description>A custom set of code standard rules to check for FitWP projects.</description>

	<rule ref="WordPress">
		<exclude name="WordPress.WhiteSpace.ControlStructureSpacing" />
		<exclude name="WordPress.XSS.EscapeOutput" />
		<exclude name="WordPress.WhiteSpace.ScopeIndent.Incorrect" />
		<exclude name="WordPress.VIP.DirectDatabaseQuery" />
		<exclude name="WordPress.VIP.ValidatedSanitizedInput" />
		<exclude name="WordPress.VIP.PostsPerPage.posts_per_page" />
		<exclude name="WordPress.VIP.RestrictedFunctions.switch_to_blog" />
		<exclude name="WordPress.VIP.FileSystemWritesDisallow" />
		<exclude name="WordPress.VIP.RestrictedFunctions.user_meta" />
		<exclude name="WordPress.VIP.SessionFunctionsUsage" />
	</rule>
</ruleset>
